modules = ["java-graalvm22.3-17"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["jdk17", "maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn spring-boot:run -q"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = ["sh", "-c", "mvn -q spring-boot:run"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "mvn -DskipTests package"]
